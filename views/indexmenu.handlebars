    AFRAME.registerComponent('cursor-listener', {
  init: function () {
    //var lastIndex = -1;
    //var COLORS = ['red', 'green', 'blue'];
    this.el.addEventListener('click', function (evt) {
      //lastIndex = (lastIndex + 1) % COLORS.length;
      
      
      if (this.getAttribute('clicked') == "0"){
        var y = this.getAttribute('position').y - .2;
        this.setAttribute('position', '0 '+y+' 1');
        this.setAttribute('geometry', 'primitive: box; width: 1.25; height: .65;');
        this.setAttribute('opacity', '1.0');
        replace_text(this.getAttribute('id'));
        this.setAttribute('clicked', "1");
      }
      else if (this.getAttribute('clicked') == "1"){
        var y = this.getAttribute('position').y + .2;
        this.setAttribute('position', '0 '+y+' 1');
        this.setAttribute('geometry', 'primitive: box; width: 1.25; height: .1;');
        this.setAttribute('opacity', '0.9');
        reset_text(this.getAttribute('id'));
        this.setAttribute('clicked', "0");
      }
      
      
      //console.log('I was clicked at: ', evt.detail.intersection.point);

      //geometry="primitive: box; width: .75; height: .1;"
    });
  }
});
