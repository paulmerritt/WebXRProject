  <body style='margin : 0px; overflow: hidden;'>
    {{!-- a-frame scene for the objects we place --}}
    {{!-- not VR, embedded allows us to fit other content on the webpage, register the webcam as a camera source, debug disabled --}}
    <a-scene
      vr-mode-ui="enabled: false"
      embedded
      arjs="sourceType: webcam; debugUIEnabled: false; detectionMode: mono_and_matrix; matrixCodeType: 3x3;"
    >
    
      <a-camera camera="" position="" rotation="" look-controls="" wasd-controls="">
          <a-entity cursor="fuse: true; fuseTimeout: 500"
                  position="0 0 -1"
                  geometry="primitive: ring; radiusInner: 0.005; radiusOuter: 0.01"
                  material="color: yellow; shader: flat">
        </a-entity>
      </a-camera>
      

      
        <a-entity position="0 0 5" id="menu"
        geometry="primitive: box" material="color: black; opacity: 0.4;"
        scale="5 5 .1"
        look-at="[camera]"
        font="roboto"
        value="main menu">
            <table style="border-spacing: 20px;"></table>
            {{#each sources_array as |item i|}}
                <tr><td style="border: 10px;">
                  <a-entity 
                  clicked="0"
                  cursor-listener
                  id ={{this.port}}
                  geometry="primitive: box; width: 1.25; height: .1;"
                  {{!-- position="0 0.{{i}} 1" --}}
                  scale=".7 .7 1"
                  font="roboto"
                  material="color: white; opacity: 0.9;"
                  width="1"
                  height="1"
                  opacity="0.0">
                    <a-text wrapCount = "1" position="-.15 0 .1" height="1.0" width="1.25" id="text{{this.port}}" option = {{i}} value="option {{i}}"></a-text>
                  </a-entity>
                </td></tr> 
            {{/each}}
            </table>
        </a-entity>
      
    </a-scene>
